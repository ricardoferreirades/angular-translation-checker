{
  "name": "angular-translation-checker",
  "version": "1.5.0",
  "description": "A comprehensive tool for analyzing translation keys in Angular projects using ngx-translate",
  "main": "lib/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ng-i18n-check": "bin/ng-i18n-check.js",
    "angular-translation-checker": "bin/ng-i18n-check.js"
  },
  "files": [
    "bin",
    "lib",
    "dist",
    "src",
    "templates",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "dev": "ts-node src/index.ts",
    "test": "node test/test.js",
    "test:ts": "ts-node test/test-typescript.ts",
    "test-example": "node test-example.js",
    "lint": "echo \"No linting configured\"",
    "prepublishOnly": "npm run build && npm test",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "example:basic": "cd example && ../bin/ng-i18n-check.js --config configs/basic.config.json",
    "example:advanced": "cd example && ../bin/ng-i18n-check.js --config configs/advanced.config.json",
    "example:typescript": "cd example && ../bin/ng-i18n-check.js --config configs/typescript-only.config.json",
    "example:html": "cd example && ../bin/ng-i18n-check.js --config configs/html-only.config.json",
    "example:ignore": "cd example && ../bin/ng-i18n-check.js --config configs/ignore-files.config.json",
    "example:quiet": "cd example && ../bin/ng-i18n-check.js --config configs/quiet-config.json",
    "example:output-summary": "cd example && ../bin/ng-i18n-check.js --output summary",
    "example:output-unused": "cd example && ../bin/ng-i18n-check.js --output unused --config configs/quiet-config.json",
    "example:output-ignored": "cd example && ../bin/ng-i18n-check.js --output ignored --config configs/quiet-config.json",
    "example:output-missing": "cd example && ../bin/ng-i18n-check.js --output missing --config configs/quiet-config.json",
    "example:all": "npm run example:basic && echo '\\n' && npm run example:advanced && echo '\\n' && npm run example:typescript && echo '\\n' && npm run example:html && echo '\\n' && npm run example:ignore && echo '\\n' && npm run example:quiet",
    "example:output-demos": "echo 'Testing Output Sections:' && npm run example:output-summary && echo '\\n' && npm run example:output-unused && echo '\\n' && npm run example:output-ignored && echo '\\n' && npm run example:output-missing",
    "example:demo": "cd example && npm run demo:all-configs",
    "example:install": "cd example && npm install",
    "demo": "npm run example:demo",
    "validate": "npm run example:all"
  },
  "keywords": [
    "angular",
    "i18n",
    "translation",
    "ngx-translate",
    "internationalization",
    "unused-translations",
    "translation-keys",
    "angular-cli",
    "output-control",
    "granular-output",
    "selective-display"
  ],
  "author": {
    "name": "Ricardo Ferreira",
    "email": "ricardo.ferreira@example.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ricardoferreirades/angular-translation-checker.git"
  },
  "bugs": {
    "url": "https://github.com/ricardoferreirades/angular-translation-checker/issues"
  },
  "homepage": "https://github.com/ricardoferreirades/angular-translation-checker#readme",
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "@types/node": "^24.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitepress": "^1.6.3"
  },
  "peerDependencies": {
    "@angular/core": ">=12.0.0"
  },
  "peerDependenciesMeta": {
    "@angular/core": {
      "optional": true
    }
  },
  "dependencies": {
    "glob": "^11.0.3"
  }
}
